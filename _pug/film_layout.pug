  body(lang='en')
    // Like Button
    #fb-root
    script.
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    #wrapper
      section#head
        // Header
        header
          #head-container
            // Description
            #description
              h3 A movie journal to reflect on all the films that I hate and admire.
            // Menu
            nav
              ul
                li
                  a(href='/films') Home
                li
                  a(href='/blog') Personal Blog
                li
                  a(href='http://letterboxd.com/kyeah') Letterboxd
                li
                  a(href='/film') Archive

      section
        block content

      // Footer
      section#foot
        footer
          p
            | {% if paginator.total_pages != paginator.page %}
            strong: a(href="{{paginator.next_page_path}}") <
            | {% endif %}
            | {% if paginator.total_pages != paginator.page and paginator.previous_page_path %}
            strong â€¢
            | {% endif %}
            | {% if paginator.previous_page_path %}
            strong: a(href="{{paginator.previous_page_path}}") >
            | {% endif %}
            br
            br
            strong: a(href="/") Kevin Yeh
    // Return To Top Button
    a#return-button
      img(src='/img/blog/film-return-button.png', width='33', height='32', alt='Return button')
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
