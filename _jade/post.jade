extends layout

block title 
  title Blog | Kevin Yeh

block extra-menu
  li: a(href='http://scriptogr.am/kyeah') Film Journal

block cover
  +cover()(class='liteturn')

block cover-text
  h1.text-shadowed Questionable Hacks
  a(href='http://www.scriptogr.am/kyeah'): h2(style='color: #DB6837') > go to film journal

block content
  section#blog
    #posts_anchor
    .blog-nav
      ul#posts(style="position:absolute;").
        <li class="animated fadeInDown">
          <a href='/blog'><h2-dark style='color: #DB6837;'>Q.H.</h2-dark></a>
        </li>

        {% for post in site.posts %}
          <li>
            <a href="{{ post.url }}">{{ post.title }}</a>
          </li>
        {% endfor %}

    .content
      .am-content-container
        .content-wrapper
          | {% assign post = page %}            
          include ./post_content.jade
          hr
          br
