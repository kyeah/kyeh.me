extends layout

block title 
  | <title> {{page.title}} </title>

block meta
  meta(name="twitter:card" content="summary")
  meta(property="og:type" content="article")
  meta(property="og:title" content="{{ page.title }}")
  meta(property="og:description" content="{{ page.excerpt }}")
  meta(property="og:url" content="http://kyeh.me{{ page.url }}")

block cover
  +cover()(class='am-hero-small')

block cover-text
  a(href='/blog')
    | {% capture title %}{{ page.title }}{% if page.subtitle %}:{% endif%}{% endcapture %}
    | <h1 class="text-shadowed white"> {{ page.title }} </h1>
  h3-dark.white.text-shadowed
    | {% if page.subtitle %}
    | {{ page.subtitle }}
    br
    | {% endif %}

block scripts
  script(src="/js/blog.js")
  script.
    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
  script.
    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

block content
  section#blog
    .content
      .am-content-container
        .content-wrapper
          | {% assign post = page %}
          include ./post_content.jade

  section#foot
    footer
      .content
        .am-content-container(style="margin-top:0;padding-top:0")
          .content-wrapper
            .pure-g
              .pure-u-1.pure-u-md-1-6
              .pure-u-1.pure-u-md-1-3
                | {% if page.previous.url %}
                p: strong: a(href="{{page.previous.url}}" style="float: left;padding-left:10px;padding-right:10px").
                 < {{ page.previous.title }}
                | {% endif %}
              .pure-u-1.pure-u-md-1-3
                | {% if page.next.url %}
                p: strong: a(href="{{page.next.url}}" style="float: right;padding-left:10px;padding-right:10px").
                 {{ page.next.title }} >
                | {% endif %}