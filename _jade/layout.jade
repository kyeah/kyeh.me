doctype html
html(lang='en')
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')

  block title

  // Set the viewport width to device width for mobile
  meta(name='viewport' content='width=device-width, initial-scale=1')

  // Included CSS Files
  link(rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css")
  link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,100')
  link(rel='stylesheet' href='/css/lightbox.css')
  link(rel='stylesheet' href='/css/screen.css')
  link(rel='stylesheet' href='/css/longform.css')
  link(rel='stylesheet' href='/css/jquery.fancybox.css?v=2.1.5')
  link(rel='stylesheet' href='/css/jquery.fancybox-thumbs.css')
  link(rel='stylesheet' href='/css/jquery.fancybox-buttons.css')
  link(rel='stylesheet' href='/css/app.css')

  link(rel='icon' type='image/png' href="/images/logos/kylogo.png")
  style.
    [ng-cloak] {display: none}

  div.am-content-header-container.am-light
    div.am-content-container
      header.pure-g-r
        div.pure-u-1-3
          div.pure-g
            div.pure-u-4-5
            div.pure-u-1-5
              a.am-visible-phone.am-open-menu(href='#')
                i.icon-menu
                
        nav.pure-u-2-3.am-collapsed-phone-menu
          div.home-menu.pure-menu.pure-menu-open.pure-menu-horizontal
            ul
              li: a(href='/') About
              block extra-menu
              li: a(href='blog') Blog
                  
mixin cover()
  section#hero.am-hero.am-hero-med.am-hero-cover.cover(data-stellar-background-ratio='0.5' class!=attributes.class)
    div.am-content-container
      div.pure-g
        div.pure-u
          block cover-text

body#main
  block cover
  block content
  
  section#social-media.am-content-container(style='padding:20px')
      .pure-g
        .pure-u.hcentered
          a(href='https://github.com/kyeah'): i.fa.fa-github.icon.big.white.outline
          a(href='http://www.linkedin.com/profile/view?id=205992470'): i.fa.fa-linkedin.icon.big.white.outline
          a(href='https://www.facebook.com/k.YEAHHH'): i.fa.fa-facebook.icon.big.white.outline
          a(href='https://plus.google.com/u/0/100069674969941474776'): i.fa.fa-google-plus.icon.big.white.outline
          a(href='http://scriptogr.am/kyeah'): i.fa.fa-video-camera.icon.big.white.outline

// Included Javascript Files
script(src='/js/jquery-1.10.2.min.js')
script(src='/js/jquery.timeago.js')
script(src='/js/custom.modernizr.js')
//script(src='js/longform.js')
script(src='/js/jquery.stellar.min.js')
script(src='/js/foundation.min.js')
script(src='/js/jquery.fancybox.pack.js?v=2.1.5')
script(src='/js/helpers/jquery.fancybox-buttons.js')
script(src='/js/helpers/jquery.fancybox-media.js')
script(src='/js/helpers/jquery.fancybox-thumbs.js')
script(src='/js/app.js')
script(src='/js/blog.js')

script.
  $('a').click(function(){
  $('html, body').animate({
  scrollTop: $( $.attr(this, 'href') ).offset().top
  }, 500);
  return false;
  });