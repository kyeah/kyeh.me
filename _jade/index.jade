extends layout

block title
  title Home | Kevin Yeh

block extra-menu
  li.pure-menu-item: a(href='#code') Code + Design              

block cover
  #padder.am-content-header-container.am-light
    div.am-content-container
      header.pure-g-r
        div.pure-u-1-3

  +cover(class='mountainside am-hero-med' style='background-color: rgba(0,0,0,0.2)')

block cover-text
  h1
    .animated.fadeInDown
      span.burnt-orange(style='margin-left: 16px; padding-left: 15px') K
      span(style='margin-right: 16px') YEAH.
    hr
    .animated.fadeInUp(style="line-height: 0.3em")
      include social_layout.jade

block content
  section#intro.content-wrapper
    .content
      .am-content-container
        .pure-g.hcentered
          .pure-u.hcentered
            img.about-avatar(src='img/personal/avatar.png')
            h1-alt.burnt-orange: i "How do I love thee? Let me count the ways,
            h3.spaced.text-upper: i
              a(href='kyehresume.pdf' target='_blank') that I may dissect thy resume."
            h4.text-centered.light-gray
              br
              | {{ site.about | markdownify | remove: '<p>' | remove: '</p>' }}

  section#code.content-wrapper
    .content
      .am-content-container
        .pure-g.hcentered
          .pure-u.hcentered
            .image-row
              ul#og-grid.og-grid.
                {% for proj in site.projects %}
                <li style='{{proj.li-style}}'>
                  <a href='{{proj.link}}' data-git='{{proj.git}}' data-video='{{proj.video}}' data-largesrc='{{proj.img-large}}' data-title='{{proj.title}}' data-description='{{proj.content | markdownify}}' id='{{proj.id}}' data-anchorid='{{proj.anchorid}}'>
                    <div class='image-link'>
                      {% if proj.img-thumb %}
                      <img src='{{proj.img-thumb}}' alt='{{proj.img-alt}}' style='{{proj.img-style}}'></img>
                      {% else %}
                      <video autoplay loop preload="auto" width="501px" height="278px" style="background:#000000;{{proj.vid-style}}" poster="{{proj.vid-poster}}">
                        <source src='{{proj.vid}}' type="video/webm"/>
                      </video>
                      {% endif %}
                    </div>
                  </a>
                </li>
                {% endfor %}

            h3-dark.text-centered
              br
              | Visit 
              a(href='https://github.com/kyeah') github:kyeah 
              | for an in-depth look at my recent and ongoing projects.

  section#blog.content-wrapper
    .content
      .am-content-container
        .pure-g.hcentered
          .pure-u-1-12
          .pure-u(style='margin-bottom:10px'): h3-dark.blue 
            br
            | <a href='blog'>Newest Blog Post: {{ site.posts.first.title}} </a>
            br
        .pure-g.hcentered
          .pure-u-1-12
          .pure-u-5-6
            p(style='margin:0;')
              h4-dark
                | {{ site.posts.first.excerpt | remove: '<p>' | remove: '</p>' }}
                | <a href='{{ site.posts.first.url }}'>&nbspRead more</a>
            hr(style="margin-top:20px")

  section#blog.content-wrapper
    .content
      .am-content-container
        .pure-g.hcentered
          .pure-u-1-12
          .pure-u(style='margin-bottom:10px'): h3-dark.blue 
            br
            | <a href='films'>Newest Film Post: {{ site.films.last.title }} </a>
            br
        .pure-g.hcentered
          .pure-u-1-12
          .pure-u-5-6
            p(style='margin:0;')
              h4-dark
                | {{ site.films.last.excerpt | markdownify | remove: '<p>' | remove: '</p>' }}
            hr(style="margin-top:20px")        

  section#talks.content-wrapper
