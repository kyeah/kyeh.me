  // CODE 
  section#code.content-wrapper
    .content
      .am-content-container
        .pure-g.hcentered
          .pure-u.hcentered
            .image-row
              ul#og-grid.og-grid.
                {% for proj in site.projects %}
                <li style='{{proj.li-style}}'>
                  <a href='{{proj.link}}' data-git='{{proj.git}}' data-video='{{proj.video}}' data-largesrc='{{proj.img-large}}' data-title='{{proj.title}}' data-description='{{proj.content | markdownify}}' id='{{proj.id}}' data-anchorid='{{proj.anchorid}}'>
                    <div class='image-link'>
                      {% if proj.img-thumb %}
                      <img src='{{proj.img-thumb}}' alt='{{proj.img-alt}}' style='{{proj.img-style}}'></img>
                      {% else %}
                      <video autoplay loop preload="auto" width="501px" height="278px" style="background:#000000;{{proj.vid-style}}" poster="{{proj.vid-poster}}">
                        <source src='{{proj.vid}}' type="video/webm"/>
                      </video>
                      {% endif %}
                    </div>
                  </a>
                </li>
                {% endfor %}

            h3-dark.text-centered
              br
              | Visit 
              a(href='https://github.com/kyeah') github:kyeah 
