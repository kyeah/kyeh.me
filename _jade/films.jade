doctype html
html
  head
    //
      Citizen Theme
      by Jonathon Toon
      www.jonathontoon.com
      Made for scriptogr.am
    title   Kevin Yeh
    meta(name='description', content='A movie journal to reflect on all the films that I hate and admire.')
    meta(name='viewport', content='width=device-width; initial-scale=1; maximum-scale=1.0;')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='ROBOTS', content='INDEX,FOLLOW')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(charset='utf-8')
    meta(property='og:title', content='Kevin Yeh')
    meta(property='og:site_name', content='Kevin Yeh')
    link(rel='shortcut icon', href='http://scriptogr.am/lib/img/favicon.ico')
    link(rel='alternate', type='application/rss+xml', title='RSS', href='http://scriptogr.am/kyeah/feed')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:700,800', rel='stylesheet', type='text/css')
    link(href='/css/film-style.css', rel='stylesheet', type='text/css')
  body(lang='en')
    // Like Button
    #fb-root
    script.
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    #wrapper
      section#head
        // Header
        header
          #head-container
            // Description
            #description
              h3 A movie journal to reflect on all the films that I hate and admire.
            // Menu
            nav
              ul
                li
                  a(href='/films') Home
                li
                  a(href='/blog') My Personal Blog
                li
                  a(href='http://www.imdb.com/user/ur49646117/ratings?ref_=nv_usr_rt_4') IMDb Ratings
                li
                  a(href='/film') Archive
      section
        | {% for film in site.films reversed %}
        article.index
          .content
            .title
              .date
                | {{ film.date | date: '%b %d, %Y' }}
                br
                | â€”
              // Post Title
              h1: a(href='{{film.url}}') {{ film.title }}
            #body
              img(src='{{film.img}}')
              {{film.content | markdownify}}
        | {% endfor %}
      // Footer
      section#foot
        footer
          p
            strong: a(href="/") Kevin Yeh
    // Return To Top Button
    a#return-button
      img(src='/img/blog/film-return-button.png', width='33', height='32', alt='Return button')
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(type='text/javascript', src='/js/film-app.js')
